{
    "name": "ace/zend-money",
    "description": "Helpful form and validation stuff for zend's form and moneyphp",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "George Steel",
            "email": "george@net-glue.co.uk"
        }
    ],
    "config" : {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "moneyphp/money": "^3.2",
        "zendframework/zend-form": "^2.14",
        "zendframework/zend-hydrator": "^2",
        "zendframework/zend-i18n": "^2.9"
    },
    "require-dev" : {
        "phpunit/phpunit": "^7.5",
        "zendframework/zend-code": "^3.3",
        "zendframework/zend-config-aggregator": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "ACE\\Money\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ACETest\\Money\\": "test/Money"
        }
    }
}
